@{
    ViewData["Title"] = "Index";
}
@model CalculatorEmpty.Models.CalculatorModel


<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="~/css/site.css" />


        <title>CalculatorNetSupport</title>
    </head>
    <body>
    <div class="top-bar"><span>CalculatorNetSupport</span></div>
    <div class="text-center">
        <h1>Welcome to this online calculator.</h1>
        <h2>Enter your calculations below</h2>
    </div>

    <form action="/Home/Calculate" method="post" id="form">
        <div class="container">      
            <div class="error" id="error-message">@Model.ErrorMessage</div>
            <div class="calculator" id="calculator">
                
                <input type="text" name="Expression" id="display" placeholder="0" value="@(Model.Result ?? Model.Expression)" />

                <div class="buttons">
                    <button type="button" class="number" onclick="appendToDisplay('7')">7</button>
                    <button type="button" class="number" onclick="appendToDisplay('8')">8</button>
                    <button type="button" class="number" onclick="appendToDisplay('9')">9</button>

                    <button class = "delete" type="button" onclick="deleteLastCharacter()">Del</button>
                    <button class ="clear" type="button" onclick="clearDisplay()">C</button>

                    <button type="button" class="number" onclick="appendToDisplay('4')">4</button>
                    <button type="button" class="number" onclick="appendToDisplay('5')">5</button>
                    <button type="button" class="number" onclick="appendToDisplay('6')">6</button>

                    <button type="button" class="operator" onclick="appendToDisplay('*')">*</button>
                    <button type="button" class="operator" onclick="appendToDisplay('/')">/</button>

                    <button type="button" class="number" onclick="appendToDisplay('1')">1</button>
                    <button type="button" class="number" onclick="appendToDisplay('2')">2</button>
                    <button type="button" class="number" onclick="appendToDisplay('3')">3</button>

                    <button type="button" class="operator" onclick="appendToDisplay('+')">+</button>
                    <button type="button" class="operator" onclick="appendToDisplay('-')">-</button>

                    <button type="button" class="number" onclick="appendToDisplay('0')">0</button>
                    <button type="button" class="number" onclick="appendToDisplay('.')">.</button>                    
                    <button type="button" class ="operator" onclick="appendToDisplay('^')">^</button>

                    <button type="button" class="operator" onclick="appendToDisplay('(')">(</button>
                    <button type="button" class="operator" onclick="appendToDisplay(')')">)</button>
                    

                    <button type="button" class="arrow" onclick="scrollDisplayLeft()">&#x276E;</button>
                    <button type="button" class="arrow" onclick="scrollDisplayRight()">&#x276F;</button>
                    <button class="submit" type="submit">=</button>
                </div>
            </div>
        </div>
    </form>
    <script src="~/js/site.js"></script>
    </body>
</html>

